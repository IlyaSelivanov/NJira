<h3>Tasks (total count): @ViewBag.Total</h3>

<div id="chartContainer" style="width: 90%; height:400px;"></div>
<div id="chartContainer_1" style="width: 90%; height:400px;"></div>
<div id="chartContainer_2" style="width: 90%; height:400px;"></div>

<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script src="http://canvasjs.com/assets/script/canvasjs.min.js"></script>
<script type="text/javascript">
    $(function () {
        var chart = new CanvasJS.Chart("chartContainer", {
            title: {
                text: "Issues (v1.32.8):"
            },
            animationEnabled: true,
            legend: {
                verticalAlign: "center",
                horizontalAlign: "left",
                fontSize: 20,
                fontFamily: "Helvetica"
            },
            theme: "theme3",
            data: [
            {
                type: "pie",
                indexLabelFontFamily: "Garamond",
                indexLabelFontSize: 20,
                indexLabel: "{label} {y}%",
                startAngle: -20,
                showInLegend: true,
                toolTipContent: "{legendText} {y}%",
                dataPoints: @Html.Raw(ViewBag.DataPoints),
            }
            ]
        });
        chart.render();
        chart = {};

        var chart1 = new CanvasJS.Chart("chartContainer_1", {
            theme: "theme3",//theme1
            title:{
                text: "Open tasks per user (v1.32.8):"
            },
            animationEnabled: false,   // change to true
            data: [
            {
                type: "column",
                dataPoints: @Html.Raw(ViewBag.DataPoints1),
            }
            ]
        });
        chart1.render();
        chart1 = {};

        var chart2 = new CanvasJS.Chart("chartContainer_2", {
            theme: "theme3",//theme1
            title:{
                text: "Tasks for review per user (v1.32.8):"
            },
            animationEnabled: false,   // change to true
            data: [
            {
                type: "column",
                dataPoints: @Html.Raw(ViewBag.DataPoints2),
            }
            ]
        });
        chart2.render();
        chart2 = {};
    });
</script>