@model NJira.Domain.Entities.SearchModel

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-sm-4 col-sm-offset-4">

        <h2>Search</h2>

        <div class="panel panel-default">
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.Version)
                        @Html.DropDownListFor(m => m.Version, Model.Versions, null, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Status)
                        @Html.DropDownListFor(m => m.Status, Model.Statuses, null, new { @class = "form-control" })
                    </div>

                    <button type="submit" class="btn btn-primary">Search</button>
                }
            </div>
        </div>
    </div>
</div>

